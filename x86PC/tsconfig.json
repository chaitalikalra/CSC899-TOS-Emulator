{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es6",
        "allowJs": true,
        "allowUmdGlobalAccess": true,
        "noEmitOnError": true,
        "outDir": "../build/x86PC/",
        "composite": true,
        "experimentalDecorators": true,
        "lib": [
            "es2019"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}